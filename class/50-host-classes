#! /bin/bash

# assign classes to hosts

case $HOSTNAME in
    crypt*)
        echo "FAIBASE DEBIAN DEBIANAMS ENCRYPTED" ;;
    debmir*)
        echo "FAIBASE DEBIAN DEBIANAMS DEBMIRROR" ;;
    alexandria*)
        echo "FAIBASE DEBIAN DEBIANAMS MINDESKTOP DESKTOP SALE NERD USERTUX DESCRIBES SERVER LAPTOP LOGIC DEBMIRROR FAISERVER ENCRYPTED" ;;
    lukstop*)
        echo "FAIBASE DEBIAN DHCPC DEBIANAMS NERD MINDESKTOP DESKTOP DESCRIBES USERTUX SALE LAPTOP ENCRYPTED";;
    debianluks*)
        echo "FAIBASE DEBIAN DHCPC DEBIANAMS NERD MINDESKTOP DESKTOP DESCRIBES USERTUX SALE ENCRYPTED";;
    minitop*)
        echo "FAIBASE DEBIAN DHCPC DEBIANAMS MINDESKTOP USERTUX SALE LAPTOP";;
    laptop*)
        echo "FAIBASE DEBIAN DHCPC DEBIANAMS NERD MINDESKTOP DESKTOP DESCRIBES USERTUX SALE LAPTOP";;
    debian*)
        echo "FAIBASE DEBIAN DHCPC DEBIANAMS NERD MINDESKTOP DESKTOP DESCRIBES USERTUX SALE";;
    cafe*)
        echo "FAIBASE DEBIAN DHCPC DEBIANAMS NERD MINDESKTOP DESKTOP DESCRIBES USERTUX CAFE";;
    office*)
        echo "FAIBASE DEBIAN DHCPC DEBIANAMS NERD MINDESKTOP DESKTOP DESCRIBES NISCLIENT";;
    gdserver*)
        echo "FAIBASE DEBIAN DEBIANAMS NERD DESCRIBES SERVER";;
    phobos*)
        echo "FAIBASE DEBIAN DEBIANAMS NERD DESCRIBES FIREWALL";;
    *)
        echo "FAIBASE DEBIAN DHCPC" ;;
esac

ifclass -o I386 AMD64 && echo GRUB_PC
exit 0
