#! /bin/bash

# assign classes to hosts

case $HOSTNAME in
    crypt*)
        echo "FAIBASE DEBIAN DEMO DEBIANAMS ENCRYPTED" ;;
    debmir*)
        echo "FAIBASE DEBIAN DEMO DEBIANAMS DEBMIRROR" ;;
    alexandria*)
        echo "FAIBASE DEBIAN DEMO DEBIANAMS DESKTOP SALE NERD USERTUX DESCRIBES SERVER LAPTOP DEBMIRROR FAISERVER ENCRYPTED" ;;
    lukstop*)
        echo "FAIBASE DEBIAN DHCPC DEMO DEBIANAMS NERD DESKTOP DESCRIBES USERTUX SALE LAPTOP ENCRYPTED";;
    debianluks*)
        echo "FAIBASE DEBIAN DHCPC DEMO DEBIANAMS NERD DESKTOP DESCRIBES USERTUX SALE ENCRYPTED";;
    laptop*)
        echo "FAIBASE DEBIAN DHCPC DEMO DEBIANAMS NERD DESKTOP DESCRIBES USERTUX SALE LAPTOP";;
    debian*)
        echo "FAIBASE DEBIAN DHCPC DEMO DEBIANAMS NERD DESKTOP DESCRIBES USERTUX SALE";;
    cafe*)
        echo "FAIBASE DEBIAN DHCPC DEMO DEBIANAMS NERD DESKTOP DESCRIBES USERTUX CAFE";;
    office*)
        echo "FAIBASE DEBIAN DHCPC DEMO DEBIANAMS NERD DESKTOP DESCRIBES NISCLIENT";;
    gdserver*)
        echo "FAIBASE DEBIAN DEMO DEBIANAMS NERD DESCRIBES SERVER";;
    phobos*)
        echo "FAIBASE DEBIAN DEMO DEBIANAMS NERD DESCRIBES FIREWALL";;
    *)
        echo "FAIBASE DEBIAN DHCPC" ;;
esac

ifclass -o I386 AMD64 && echo GRUB_PC
exit 0
