#! /bin/bash

VERSION=0.3.8-0
ARCH=Linux-32
if test $(uname -m) = x86_64 ; then
	ARCH=Linux-64
fi

ARCHIVE=Popcorn-Time-${VERSION}-${ARCH}.tar.xz

cp -v /var/lib/fai/config/downloads/$ARCHIVE /target/tmp

$ROOTCMD tar --overwrite -xvJf /tmp/$ARCHIVE -C /usr/local/bin

fcopy -Mi /usr/share/applications/popcorntime.desktop /usr/local/Popcorn-Time/Popcorn-Time.png

