#! /bin/bash

fcopy -Bv /etc/dhcp/dhcpd.conf
fcopy -Bvr /etc/fai
fcopy -v /etc/fai/apt/sources.list /etc/approx/approx.conf
fcopy -v /etc/fai-i386/NFSROOT /etc/exports
fcopy -v /etc/hosts /etc/network/interfaces
fcopy -Mi /usr/local/bin/pxe.sh
fcopy -Mi /usr/local/bin/pxe-i386.sh

if [ $FAI_ACTION = "install" ]; then

    # use the same sources.list for the server itself and the clients
    cp -a $target/etc/fai/apt $target/etc/

    rm -f $target/etc/resolv.conf
    echo "nameserver 8.8.8.8">$target/etc/resolv.conf

    # create some host entries
    # ainsl /etc/hosts "192.168.0.101 lukstop01"
    # ainsl /etc/hosts "192.168.0.102 debian01"
fi
