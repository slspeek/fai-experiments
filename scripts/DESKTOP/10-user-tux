#! /bin/bash

# Thomas Lange, 2001-2010, lange@debian.org

# fcopy -Mi /etc/sudoers
ifclass XORG && {
    fcopy -M /etc/X11/xorg.conf
}

# add a tux user account
if  $ROOTCMD getent passwd tux ; then
    $ROOTCMD deluser tux
    $ROOTCMD rm -rf /home/tux
fi

$ROOTCMD adduser --disabled-login --gecos "Tux" tux
$ROOTCMD usermod -p "$TUXPW" tux
$ROOTCMD /usr/local/bin/add2groups.sh
