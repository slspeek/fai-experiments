# dhcpd.conf for fai
# replace HOSTNAME with the name of your install server

deny unknown-clients;
option dhcp-max-message-size 2048; 
use-host-decl-names on;
#always-reply-rfc1048 on;


subnet NETWORK.0 netmask 255.255.255.0 {
   option routers DEFAULTGW;
   option domain-name "beowulf";
   option domain-name-servers 8.8.8.8;
   option time-servers HOSTNAME;
   option ntp-servers HOSTNAME;
   server-name HOSTNAME;
   next-server HOSTNAME;
   filename "fai/pxelinux.0";
}

# perl -ane ' {print "host atom {hardware ethernet $1;fixed-address atom}";}'
